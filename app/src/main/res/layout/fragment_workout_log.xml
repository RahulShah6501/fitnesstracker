<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkoutLogFragment">

    <Spinner
        android:id="@+id/spinner_workout_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/et_workout_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner_workout_type"
        android:layout_marginTop="16dp"
        android:hint="Enter workout duration"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_workout_duration"
        android:layout_marginTop="16dp"
        android:text="Save Workout" />

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_save"
        android:layout_marginTop="16dp"
        android:text="Reset" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_workouts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/btn_reset"
        android:layout_marginTop="16dp"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
